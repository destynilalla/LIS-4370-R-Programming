# Define matrices A and B
A <- matrix(c(2, 0, 1, 3), ncol = 2)
B <- matrix(c(5, 2, 4, -1), ncol = 2)

# Find A + B
A + B

# Find A - B
A - B

# Create a diagonal matrix
diag(c(4, 1, 2, 3), nrow = 4)

# Generate the specified matrix using diag()
C <- diag(x = 3, nrow = 5)
C[1, 2:5] <- 1
C[2:5, 1] <- 2
C
